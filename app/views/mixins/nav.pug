mixin nav(items)
  ul&attributes(attributes)
    each item, key in items
      - var active = ''
      - var drop= ''
      - if (key === menuIndex) active = 'active'
      li(class=item.level)
        +link(item.title, item.href, item.text)(class=item.class)
        if (typeof(item.itemsMenu) !== 'undefined')
          +nav(item.itemsMenu)(class='drop-menu-item')
